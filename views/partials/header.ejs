<header id="top-header">
    <h1 class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </h1>
    <div class="header-links">
        <% if (locals.loggedin) { %>
            <div class="user-tools">
                <a href="/account/" class="welcome-link">
                    Welcome <%= locals.accountData.account_firstname %>
                </a>
                <a href="/account/logout" class="logout-link">
                    Logout
                </a>
            </div>
            <% } else { %>
                <a href="/account/login">My Account</a>
                <% } %>
    </div>
</header>