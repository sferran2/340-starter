<section class="account">
    <h1>
        <%= title %>
    </h1>
    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>


        <form id="loginForm" class="account__form" action="/account/login" method="post">
            <label for="account_email">Email</label>
            <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">

            <label for="account_password">Password</label>
            <input type="password" id="account_password" name="account_password" required>

            <button class="account__btn" type="submit">Login</button>
        </form>

        <p class="account__note">
            No account?
            <a class="account__link" href="/account/register">Register here</a>
        </p>
</section>