<section class="hero">
    <h2>Welcome to CSE Motors!</h2>

    <div class="hero-wrapper">
        <div class="hero-image">
            <img src="/images/vehicles/delorean.jpg" alt="Delorean">
        </div>

        <div class="hero-info">
            <h3>DMC Delorean</h3>
            <ul>
                <li>3 Cup holders</li>
                <li>Superman doors</li>
                <li>Fuzzy dice!</li>
            </ul>

            <a href="#" class="hero-btn">Own Today</a>
        </div>
    </div>
</section>

<section class="home-columns">
    <!-- LEFT COLUMN -->
    <div class="upgrades">
        <h2>Delorean Upgrades</h2>

        <div class="upgrades-grid">
            <div class="upgrade-card">
                <div class="upgrade-box">
                    <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor">
                </div>
                <a href="#">Flux Capacitor</a>
            </div>

            <div class="upgrade-card">
                <div class="upgrade-box">
                    <img src="/images/upgrades/flame.jpg" alt="Flame Decals">
                </div>
                <a href="#">Flame Decals</a>
            </div>

            <div class="upgrade-card">
                <div class="upgrade-box">
                    <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
                </div>
                <a href="#">Bumper Stickers</a>
            </div>

            <div class="upgrade-card">
                <div class="upgrade-box">
                    <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps">
                </div>
                <a href="#">Hub Caps</a>
            </div>
        </div>
    </div>

    <!-- RIGHT COLUMN -->
    <div class="reviews">
        <h2>Latest Customer Reviews</h2>

        <ul class="review-list">
            <% if (latestReviews && latestReviews.length> 0) { %>
                <% latestReviews.forEach(r=> { %>
                    <li>
                        <strong>
                            <%= r.inv_make %>
                                <%= r.inv_model %>
                        </strong> —
                        “<%= r.review_text %>” (<%= r.rating %>/5)
                    </li>

                    <% }) %>
                        <% } else { %>
                            <li>No reviews yet.</li>
                            <% } %>
        </ul>

    </div>
</section>