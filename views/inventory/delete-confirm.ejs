<section class="inventory">
    <h1>
        <%= title %>
    </h1>
    <%- messages() %>

        <% if (typeof errors !=="undefined" && errors) { %>
            <ul class="notice">
                <% errors.forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <p>Confirm Deletion - The delete is permanent and cannot be undone.</p>

                <form id="deleteForm" class="inventory__form" action="/inv/delete" method="post">

                    <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>
                            >

                            <label for="inv_make">Make</label>
                            <input type="text" id="inv_make" name="inv_make" readonly
                                value="<%= locals.inv_make || '' %>">

                            <label for="inv_model">Model</label>
                            <input type="text" id="inv_model" name="inv_model" readonly
                                value="<%= locals.inv_model || '' %>">

                            <label for="inv_year">Year</label>
                            <input type="number" id="inv_year" name="inv_year" readonly
                                value="<%= locals.inv_year || '' %>">

                            <label for="inv_price">Price</label>
                            <input type="number" id="inv_price" name="inv_price" readonly
                                value="<%= locals.inv_price || '' %>">

                            <button type="submit">Delete Vehicle</button>
                </form>
</section>