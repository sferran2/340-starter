<section class="inventory">
    <h1>
        <%= title %>
    </h1>
    <%- messages() %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <form class="inventory__form" action="/inv/add-classification" method="post">
                    <p class="form-hint">
                        Classification name cannot contain spaces or special characters.
                    </p>

                    <label for="classification_name">Classification Name</label>
                    <input type="text" id="classification_name" name="classification_name" required
                        pattern="^[A-Za-z0-9]+$" title="Use only letters and numbers. No spaces or special characters.">

                    <button type="submit">Add Classification</button>
                </form>
</section>